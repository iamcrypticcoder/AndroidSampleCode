<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/personImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/sample_image_1"
        app:civ_border_color="@color/MediumSlateBlue"
        app:civ_border_width="2dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/personNameTextView"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/personNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Person Name"
        android:textSize="16sp"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/personImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>